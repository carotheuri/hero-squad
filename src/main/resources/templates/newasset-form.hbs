{{#partial "content"}}

    <form action="/heroes/new" method="post">
        <label class="form-label rounded" for="hero-name"><b>Select Squad</b></label>
        <select class="form-select" aria-label="Default select example" id="squad" name="squad">
            <option selected><b>--- Choose squad ---</b></option>
            <option value="1">WarFight</option>
            <option value="2">WarDefense</option>
            <option value="3">Drusco</option>
            <option value="4">Hungro</option>
        </select><br>
        <label class="form-label rounded" for="hero-name"><b>Hero Name</b></label>
        <input type="text" name="hero-name" id="hero-name" class="form-control"/>
        <label class="form-label rounded-pill" for="hero-age"><b>Heroe's Age</b></label>
        <input type="text" name="hero-age" id="hero-age" class="form-control" /><br>
        <label class="form-label rounded" for="hero-powers"><b>Select Heroes Power</b></label>
        <select class="form-select" aria-label="Default select example" name="hero-powers">
            <option selected><b>--- Choose Special Power ---</b></option>
            <option value="1">Money</option>
            <option value="2">Connection Resources</option>
            <option value="3">Physical Strength</option>
        </select><br>
        <label class="form-label rounded" for="hero-weakness"><b>Select Heroes Weakness</b></label>
        <select class="form-select" aria-label="Default select example" name="hero-weakness">
            <option selected><b>--- Choose Weakness ---</b></option>
            <option value="1">Enemies</option>
            <option value="2">Water</option>
            <option value="3">Fire</option>
        </select><br>
<!--        <button type="submit" class="btn btn-default">Add new hero</button>-->
        <button type="submit" class="btn btn-info">Add new hero</button>
    </form>

{{/partial}}

