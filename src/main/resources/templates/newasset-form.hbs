{{#partial "content"}}
    {{#if useremail }}
    Welcome {{ useremail }}
    <form action="/projects/new" method="post">
        <select class="form-select" aria-label="Default select example" id="department" name="department">
            <option selected><b>Select Department</b></option>
            <option value="DigitalEngineering">Digital Engineering</option>
            <option value="FinancialServices<">Financial Services</option>
            <option value="CoreBilling">Core Billing</option>
        </select><br>
        <label class="form-label rounded" for="asset-name"><b>Asset Name</b></label>
        <input type="text" name="asset-name" id="asset-name" class="form-control"/>
        <label class="form-label rounded-pill" for="product-owner"><b>Product Owner</b></label>
        <input type="text" id="product-owner" class="form-control" />
        <label class="form-label rounded-pill"  for="project-description"><b>Project Description</b></label>
        <input type="text" name="project-description" id="project-description" class="form-control" />
        <label class="form-label rounded-pill" for="git-link"><b>Link to GIT</b></label>
        <input type="text" name="git-link" id="git-link" class="form-control" />
        <label class="form-label rounded-pill" for="project-benefit"><b>Project Benefit</b></label>
        <input type="text" name="project-benefit" id="project-benefit" class="form-control" /><br>
        <select class="form-select" aria-label="Default select example" name="deployed-server">
            <option selected><b>Deployed Server</b></option>
            <option value="k8">Kubernetes</option>
            <option value="aws">AWS</option>
            <option value="os">Openshift</option>
        </select>
        <label class="form-label rounded-pill" for="project-issues"><b>Common Issues</b></label>
        <input type="text" id="project-issues" class="form-control" /><br>
        <button type="submit" class="btn btn-default">Add new project</button>
    </form>
    {{ else }}
        <a href="/">Return to home page</a>
    {{/if }}

{{/partial}}

{{> navbar.hbs}}